<h1>To Do List</h1>

  <%= link_to "Add New", new_task_path, class:"btn btn-primary btn-md" %>

  <table class="table">
    <thead>
      <tr>
        <td></td>
        <td>Task</td>
        <td>Due Date</td>
        <td>Note</td>
        
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><input type="checkbox" name="checkbox"></td>
        
        <td><%= task.name %></td>
        <td><%= task.due_date %></td>
        <td><%= task.note %></td>
        <td>
          <%= link_to "展開", task_path(task),class:"btn btn-primary btn-xs" %>
          <%= link_to "編輯", edit_task_path(task),class:"btn btn-info btn-xs" %>
          <%= link_to "刪除", task_path(task), method: "delete", data: { confirm: "確認刪除" }, class:"btn btn-danger btn-xs"%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>